{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "incremental": true,
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "nuxt-i18n",
      "@nuxt/vue-app",
      "@nuxtjs/vuetify",
      "@types/nuxtjs__auth",
      "nuxt-i18n",
      "jest"
    ],
    "paths": {
      "@server/*": ["server/*"],
      "~/*": ["client/*"],
      "@client/*": ["client/*"],
      "@common/*": ["common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
